{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="events">
    <h3>Évènements</h3>
        <div id="carousel-container">
            <div id="carousel-content">
                {% for evenement in evenements %}
                <div class="carousel-item"><img src="{{asset(evenement.idImage.pathImage)}}" href="{{ path('app_evenement_id', {id: evenement.id}) }}" alt="{{ evenement.nomEvent }}">{{ evenement.nomEvent }}</div>
                {% endfor %}
            </div>

            <div id="prev">&lt;</div>
            <div id="next">&gt;</div>
        </div>
    </div>
    <br>
    <div class="animaux">
    <h3>Animaux</h3>
    {{ include('animal/_animal.html.twig') }}
    </div>
{% endblock %}