{% extends 'base.html.twig' %}

{% block title %}Détails de {{ enclos.nomEnclos }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/styleShow.css">
{% endblock %}

{% block body %}
    <div class="entity">
        <div class="corps-entity">
            <p class="nomEntity">{{ enclos.nomEnclos }}</p>
        </div>
    </div>
    <div class="relationList">
        {% if enclos.animals is not empty %}
        <div class="relation">
            <p class="titre">Animaux de l'enclos</p>
            {% for animal in enclos.animals %}
                <div class="entityFromRelation">
                    <a href="{{ path('app_animal_id', {id: animal.id}) }}">
                        <img src="{{ asset(animal.Image.pathImage) }}" alt="image {{ animal.nomAnimal|first|upper}}{{ animal.nomAnimal|slice(1) }}">
                        <p>{{ animal.nomAnimal|first|upper}}{{ animal.nomAnimal|slice(1) }}</p>
                    </a>
                </div>
            {% endfor %}
        </div>
        {% endif %}

        {% if enclos.evenements is not empty %}
            <div class="relation">
                <p class="titre">Evènement de l'enclos</p>
                {% for evenement in enclos.evenements %}
                    <div class="entityFromRelation">
                        <a href="{{ path('app_evenement_id', {id: evenement.id}) }}">
                            <img src="{{ asset(evenement.Image.pathImage) }}" alt="image {{ evenement.nomEvent|first|upper}}{{ evenement.nomEvent|slice(1) }}">
                            <p>{{ evenement.nomEvent|first|upper}}{{ evenement.nomEvent|slice(1) }}</p>
                        </a>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
