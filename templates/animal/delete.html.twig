{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/delete.css">
{% endblock %}

{% block body %}
    <title>Suppression de {{ animal.nomAnimal }}</title>
    <h1>Suppression de {{ animal.nomAnimal }}</h1>
    <div class="suppression">
        <h1>Voulez vous vraiment supprimer cet animal ?</h1>
        <h2>{{ animal.nomAnimal }}</h2>

        {{ form_start(form, {'method': 'POST', 'attr': {'class': 'd-flex'}}) }}
            {{form_row(form.delete, { 'label': 'Supprimer', 'attr': {'class': 'btn btn-danger'}} )}}
            {{ form_row(form.cancel, { 'label': 'Annuler', 'attr': {'class': 'btn btn-secondary'} })}}
        {{ form_end(form) }}
    </div>

{% endblock %}

