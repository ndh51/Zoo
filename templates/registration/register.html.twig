{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/register.css">
{% endblock %}

{% block body %}
    <h1>Inscription</h1>
    <div class="form">
        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.prenomVisiteur) }}
            {{ form_row(registrationForm.nomVisiteur) }}
            {{ form_row(registrationForm.villeVisiteur) }}
            {{ form_row(registrationForm.adVisiteur) }}
            {{ form_row(registrationForm.cpVisiteur) }}
            {{ form_row(registrationForm.telVisiteur) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
            }) }}
            <div class="agree">
                {{ form_row(registrationForm.agreeTerms) }}
            </div>

            <button type="submit" class="btn btn-success w-100" style="color: white">Inscription</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
